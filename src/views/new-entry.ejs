<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h2 class="text-center">Write a New Entry</h2>

            <form method="post">
                <div class="form-group mb-3">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="form-control" placeholder="Enter a new title" required>
                </div>

                <div class="form-group mb-3">
                    <label for="body">Entry Text</label>
                    <textarea name="body" id="body" rows="3" class="form-control" required></textarea>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Post Entry" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
